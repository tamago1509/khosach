extends ../layout/common.pug

block content
    .container-fluid
      .overlay
        .d-flex.justify-content-center.form-login
          form( method="POST")
            h1.text-center.sign-up.mt-3 Đăng ký
            .form-group.gr-content
              label(for='inputAddress') Họ và tên
              input#inputAddress.form-control(name='userName' type='text' placeholder='Nhập tên')
            .form-row
              .form-group.col-md-5.email
                label(for='inputEmail4') Email
                input#inputEmail4.form-control(name='userEmail' type='email' placeholder='Email')
              .form-group.col-md-4.password
                label(for='inputPassword4') Password
                input#inputPassword4.form-control(name='userPassword' type='password' placeholder='Password')
            .form-group.gr-content
              label(for='inputAddress2') Số điện thoại
              input#inputAddress2.form-control(name='userPhone' type='text' placeholder='Số điện thoại')
            .form-group.gr-content
              label(for='inputAddress2') Địa chỉ
              input#inputAddress2.form-control(name='userAddress' type='text' placeholder='Địa chỉ')
            .form-group.gr-content
              .form-check.d-flex.justify-content-between
                .pl-3
                  input#gridCheck.form-check-input(type='checkbox' checked='')
                  label.form-check-label(for='gridCheck')
                    | Remember me
                .pr-3
                  a.text-white(href='#') Đăng nhập?
            p.text-center Kho sách_Nơi ươm mầm những giấc mơ
            br
            .footer.d-flex.justify-content-center.mb-5
              button.btn.btn-primary(type='submit')
                | Đăng ký
                i.fab.fa-telegram-plane.ml-2
  

